#include <stdio.h>
int main()
{
    double number;

    printf("Enter a number: ");
    scanf("%lf", &number);

    if (number <= 0.0)
    {
        if (number == 0.0)
            printf(" entered 0.");
        else
            printf(" a negative number.");
    }
    else
        printf(" a positive number.");
    return 0;
}
